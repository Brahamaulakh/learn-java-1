public class Main {
    public static void main(String[] args) {
 int result = 10 + 3;
        System.out.println(result);

        int result1 = 10/3;
        System.out.println(result1);
        //this will not return the float value
        // output will be 3
// to get float value

double result2 = (double)10/(double)3;
        System.out.println(result2);
//output will be 3.3333333

// increment and decrement operator

int x = 1;
    x++;//post fix

        System.out.println(x);

        int y = 1;
        ++y;
        System.out.println(y);
        // we will get the same result
  


/* if we want to increament or decreament
        x for more than 2 , there are two ways
         */
        // first way
int x = 1;
x = x+3;
        System.out.println(x);
// second way these are called assignment or compound operator
        int y = 1;
        y += 2;
        System.out.println(y);

        int z = 1;
        z *= 5;
        System.out.println(z);
        
        // both ways are identical but we prefer second one for clean coding
    }
}
