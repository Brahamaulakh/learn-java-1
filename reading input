import java.util.Scanner;

//reading input
public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        /* in this () we need to specify where we are 
        gonna read data , like in terminal or file
         */
System.out.print("Age: ");
        byte age = scanner.nextByte();
        /* now this object has some method for reading data
        lets say someone's age and then store it in a byte
        and then print
         */
       
         
        System.out.println("you are " + age);
// in this there's implicite casting is done 




//for string
   System.out.print("Name: ");

        String name = scanner.next();

        System.out.println("you are " + name);

        /* this will only return first name because it
        will call only one token , use nextLine to have
        2 or more than 2 tokens
        */
    }

    }

