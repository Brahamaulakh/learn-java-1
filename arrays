public class Main {
    public static void main(String[] args) {
        //arrays
        int[] numbers = new int[5];
        numbers[0] = 1;
        numbers[1] = 2;
        numbers[2] = 3;
        numbers[3] = 4;
        numbers[4] = 5;
        System.out.println(numbers); // this will generate the memory address not key values to do that....

        // we have a class in java called Arrays

        System.out.println(Arrays.toString(numbers));

        // better way to define array

        int[] numbers1 = {2,1,4,3,5};
        System.out.println(numbers1); // printing address
        System.out.println(Arrays.toString(numbers1));

        // to sort numbers in array
        Arrays.sort(numbers1);
        System.out.println(Arrays.toString(numbers1));


        //in java arrays has a fixed size , once we create them we cant add or remove additional items , they have a fixed length
        System.out.println(numbers1.length);
    }
}
